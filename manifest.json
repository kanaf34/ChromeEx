{
	"name" : "Link Maker_my",
	"version" : "0.0.3",
	"manifest_version" : 2,
	"description": "This is an example to web pages Link Marker",
	"icons" : {
		"16" : "icons/icon16.png",
		"48" : "icons/icon48.png",
		"128": "icons/icon128.png"
	},
	"browser_action": {
		"default_popup" : "popup.html",
		"default_icon" : "icons/icon16.png"
	},
	"background" : {
		"scripts":["background.js"],
		"persistent" : false    /*항상 움직이는 게 아니라 이벤트 발생시점에만 */
	},
	"content_scripts": [
		{
			"matches":[
				"https://www.amazon.co.jp/*",
				"http://www.amazon.co.jp/*"
			],
			"js":["content-script.js"]
		}
	],
	"permissions" : [
		"desktopCapture",
		"tabs",
		"https://*/*",
		"http://*/*"
	]
}